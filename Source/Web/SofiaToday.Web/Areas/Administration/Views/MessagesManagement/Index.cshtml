
@(Html.Kendo().Grid<SofiaToday.Web.Areas.Administration.ViewModels.MessageViewModel>()
      .Name("grid")
      .Columns(columns =>
      {
        columns.Bound(c => c.Name);
        columns.Bound(c => c.Email);
        columns.Bound(c => c.MessageText);
      })
      .Pageable()
      .Navigatable()
      .Sortable(sortable => {
          sortable.SortMode(GridSortMode.SingleColumn);
      })
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("Messages_Read", "MessagesManagement"))
      )
)
